# ===== SERVIDOR =====
PORT=3001
NODE_ENV=production

# ===== BANCO DE DADOS =====
# Railway: use DATABASE_URL (gerada automaticamente pelo addon PostgreSQL)
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# Local: use as vari√°veis separadas abaixo
DB_HOST=localhost
DB_PORT=5432
DB_NAME=locacar
DB_USER=locacar
DB_PASS=sua_senha_segura
# DB_SSL=false  # Descomente para desabilitar SSL local

# ===== JWT =====
JWT_SECRET=gerar_string_aleatoria_64_chars
JWT_EXPIRES_IN=7d

# ===== MERCADO PAGO =====
# Obtenha em: https://www.mercadopago.com.br/developers/panel/app
MP_ACCESS_TOKEN=APP_USR-xxxxxxxx
MP_PUBLIC_KEY=APP_USR-xxxxxxxx
MP_WEBHOOK_SECRET=sua_chave_webhook
MP_WEBHOOK_URL=https://seudominio.com/api/webhooks/mp

# ===== FRONTEND =====
FRONTEND_URL=https://seudominio.com

# ===== STORAGE =====
UPLOAD_DIR=./uploads

# ===== PLATAFORMA EXTERNA =====
EXTERNAL_API_URL=https://outra-plataforma.com/api/motoristas
EXTERNAL_API_KEY=token_da_api_externa
